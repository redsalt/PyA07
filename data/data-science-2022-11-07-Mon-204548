<script>
						// <auto detect user's OS dark mode if dark_mode not set before>
							//
							// this is vanilla JS and put here to block rendering so it's fast and 
							// doesn't flash switching from light to dark mode if OS detected
							//
							function autoDetectOSDarkMode() {
								console.log('=====================');
								console.log('autoDetectOSDarkMode');
								var cname='dark_mode'
								var name = cname + "=";
								var ca = document.cookie.split(';');
								var dark_mode='';
								for(var i=0; i<ca.length; i++) {
									var c = ca[i];
									while (c.charAt(0)==' ') c = c.substring(1);
									if (c.indexOf(name) != -1) {
										dark_mode=c.substring(name.length,c.length);
									}
								}

								console.log('cookie dark_mode = '+dark_mode);
								console.log('matchmedia='+window.matchMedia('(prefers-color-scheme: dark)').matches);

								if(
									dark_mode==''
										&&
									window.matchMedia('(prefers-color-scheme: dark)').matches
								) {
									console.log('OS dark mode detected or dark_mode set in cookie already, set dark in class');
									document.querySelector('html').classList.add('dark');
								}
								else if(
									dark_mode==''
										&&
									window.matchMedia('(prefers-color-scheme: light)').matches
								) {
									console.log('OS light mode detected');
									document.querySelector('html').classList.remove('dark');
								}
								else if(dark_mode=='on' || dark_mode=='off') {
									// user has dark mode cookie set, do nothing because PHP handles it in <html>
								}
								else {
									// user has no dark mode cookie set, and isn't OS dark mode either, remove dark mode
									console.log('OS dark mode NOT detected');
									document.querySelector('html').classList.remove('dark');
								}
							}
							
							// run on load
							autoDetectOSDarkMode();

							// run on change
							window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
							    autoDetectOSDarkMode();
							});
						// </auto detect user's OS dark mode if dark_mode not set before>
					</script>
